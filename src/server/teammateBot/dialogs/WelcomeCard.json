{
  "type": "AdaptiveCard",
  "body": [
      {
          "type": "TextBlock",
          "size": "Medium",
          "weight": "Bolder",
          "text": "Hey Marcus, how can I help you today?"
      },
      {
          "type": "TextBlock",
          "text": "Description...",
          "wrap": true
      }
  ],
  "actions": [
      {
          "type": "Action.ShowCard",
          "title": "Start Pomodoro Session",
          "card": {
              "type": "AdaptiveCard",
              "body": [
                  {
                      "type": "Input.Number",
                      "id": "pomodoroMinutes",
                      "placeholder": "How many minutes?"
                  }
              ],
              "actions": [
                  {
                      "type": "Action.Submit",
                      "title": "Start"
                  }
              ],
              "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
          }
      },
      {
          "type": "Action.ShowCard",
          "title": "Let's exercise!",
          "card": {
              "type": "AdaptiveCard",
              "body": [
                  {
                      "type": "Input.Number",
                      "id": "exerciseMinutes",
                      "placeholder": "How many minutes?"
                  }
              ],
              "actions": [
                  {
                      "type": "Action.Submit",
                      "title": "Let's do it!"
                  }
              ],
              "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
          }
      },
      {
          "type": "Action.ShowCard",
          "title": "Coffeee/Tea time!",
          "card": {
              "type": "AdaptiveCard",
              "body": [
                  {
                      "type": "Input.Text",
                      "id": "commentCoofee",
                      "placeholder": "Add a comment",
                      "isMultiline": true
                  }
              ],
              "actions": [
                  {
                      "type": "Action.Submit",
                      "title": "OK"
                  }
              ],
              "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
          }
      }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.2"
}