{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "Let's do it!"
        },
        {
            "type": "TextBlock",
            "text": "Description...",
            "wrap": true
        }
    ],
    "actions": [
        {
            "type": "Action.ShowCard",
            "title": "Start Pomodoro Session",
            "card": {
                "type": "AdaptiveCard",
                "body": [
                    {
                        "type": "Input.Number",
                        "id": "pomodoroMinutes",
                        "placeholder": "How many minutes?"
                    }
                ],
                "actions": [
                    {
                        "type": "Action.Submit",
                        "title": "Start"
                    }
                ],
                "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
            }
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2"
}